<!doctype html>
<html lang="en">
   <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <title>Questions and Notes</title>
      <link rel="preconnect" href="https://fonts.googleapis.com" />
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
      <link
         href="https://fonts.googleapis.com/css2?family=Inconsolata&display=swap"
         rel="stylesheet"
      />
      <link rel="stylesheet" href="/styles/shared-css.css" />
      <link rel="stylesheet" href="/styles/question-page.css" />
      <script src="/scripts/question-page.js" defer></script>
   </head>
   <body>
      <header>
         <aside class="dropdown">
            <!-- <button class="btn" id="dropdown-btn">Menu</button> -->
            <ul id="dropdown-content">
               <li>
                  <a href="/about">About</a>
               </li>
               <li>
                  <a href="/deadline">Deadlines</a>
               </li>
               <li><a href="/task">Tasks</a></li>
               <li><a href="/question" style="color: #f09433">Questions</a></li>
               <li>
                  <form method="post" action="/logout" class="logout-form">
                     <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
                     <a onclick="this.parentNode.submit();">Logout</a>
                  </form>
               </li>
            </ul>
         </aside>
         <nav>
            <section>
               <div class="default-button">
                  <a href="/about">About</a>
               </div>
               <ul>
                  <li>
                     <a href="/deadline">Deadlines</a>
                  </li>
                  <li><a href="/task">Tasks</a></li>
                  <li><a href="/question" style="color: #f09433">Questions</a></li>
               </ul>
               <div class="default-button">
                  <form method="post" action="/logout" class="logout-form">
                     <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
                     <a onclick="this.parentNode.submit();">Logout</a>
                  </form>
               </div>
            </section>
         </nav>
      </header>
      <main>
         <!-- this is not a login box practically but i am lazy to change name lol -->
         <div class="login-box">
            <p>Add a Study Card</p>
            <form action="/question" method="POST">
               <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
               <div class="user-box">
                  <input required type="text" name="title"/>
                  <label>Question / Topic name</label>
               </div>
               <div class="user-box">
                  <textarea
                     name="answer"
                     cols="40"
                     rows="6"
                     placeholder="Answer/Notes:"
                     required
                  ></textarea>
               </div>
               <% if(questionError) {%>
                  <p class="error-message"><%=questionErrorMessge%></p>
               <% } %>
               <div class="user-box">
                  <button class="btn">+ Add Note</button>
               </div>
            </form>
         </div>
         <!-- All the question cards ejs will be added from here -->
         <%if(questions && questions.length > 0) {%>
            <%for(let i = 0; i < questions.length; i++) {%>
               <div class="login-box">
                  <p id="question-title">
                     <span style="color: aliceblue;">Q:</span> <%=questions[i].title%>
                  </p>
                  <form class="deadline-card" action="/question/<%=questions[i]._id%>/delete" method="post">
                     <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
                     <div class="user-box">
                        <input type="text" readonly />
                     </div>
                     <div class="user-box">
                        <textarea name="answer" id="answer" cols="40" rows="9" readonly class="hide"><%=questions[i].answer%></textarea>
                     </div>
                     <div class="user-box">
                        <button class="btn" style="color: rgb(199, 37, 37)">X Delete</button>
                        <button
                           type="button"
                           id="edit-btn"
                           class="btn"
                           style="padding-left: 1rem; padding-right: 1rem; font-size: 1rem;"
                        >
                           <div class="default-button" style="font-size: 1rem;">
                              <a href="/question/<%=questions[i]._id%>/edit"
                                 style="font-size: 1.2rem;"
                                 >O Edit</a>
                           </div>
                        </button>
                        <button type="button" class="btn hide-btn">Show Answer</button>
                     </div>
                  </form>
               </div>
         <%} }%>
      </main>
      <footer></footer>
   </body>
</html>
